<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimerOnNotification">
        <activity
            android:name=".alarmmanager.AlarmManagerActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".jobscheduler.JobSchedulerActivity"
            android:exported="false"
            android:theme="@style/Theme.TimerOnNotification"/>
        <activity
            android:name=".workmanager.MainWorkManagerActivity"
            android:exported="false" />
        <activity
            android:name=".assignment.TimerNotificationActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".jobscheduler.MyJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".practice.MusicPlayerService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback" />
        <service
            android:name=".countdowntime.CountdownService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        <service
            android:name=".assignment.TimerService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <receiver
            android:name=".alarmmanager.AlarmReceiver"
            android:exported="true" />

        <activity
            android:name=".countdowntime.CountDownTimerActivity"
            android:exported="true" />
        <activity
            android:name=".practice.MusicPlayerActivity"
            android:exported="true" />
        <activity
            android:name=".practice.MainActivity"
            android:exported="true" />
    </application>

</manifest>